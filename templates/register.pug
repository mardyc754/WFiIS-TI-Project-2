extends layout.pug

block header 
    h1 Zarejestruj się

block content
    form(method="POST" onsubmit="registrationHandler(event)")
        .inside-form
            label(for="username") Login:
            <input type="text" name="username" id="username" /><br/>
            label(for="password") Hasło:
            <input type="password" name="password" id="password" /><br/>
            label(for="passwordAgain") Powtórz hasło:
            <input type="password" name="passwordAgain" id="passwordAgain" /><br/>
            <input type="submit" value="Zarejestruj się"/>
    p#status

